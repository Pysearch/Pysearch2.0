{% extends "layout.jinja2" %}

{% block title %}Results{% endblock %}

{% block body %}

<table id="search-list">

    <tr>
    <h1>Current Search:</h1>
        <th>Title</th>
        <th>Url</th>
        <th>body</th>
    </tr>

    <tr>
        <td>{{ URL }}</td>
        <td><a href="{{ URL }}">{{ URL }}</td>
        <td>You searched for sites like {{ URL }}!</td>
    </tr>

</table>



<table id="result-list">

    <tr>
    <h1>Results:</h1>
        <th>Urls</th>
    </tr>

    {% for result in RESULTS %}
    <tr>
        <td>Result: <a href="{{ result }}">{{ result }}</td>
    </tr>
    {% endfor %}

</table>


<table id="keyword-models-list">

    <tr>
    <h1>Results:</h1>
        <th>Keyword</th>
        <th>Keyword Weight</th>
        <th>Title Urls</th>
        <th>Header Urls</th>
        <th>Body Urls</th>
        {# <th>View Result Page</th> #}

    </tr>

    {% for result in RESULTS %}
    <tr>
        <td>{{ result['keyword'] }}</td>
        <td>{{ result['keyword_weight'] }}</td>
        <td>{{ result['title_urls'] }}</td>
        <td>{{ result['header_urls'] }}</td>
        <td>{{ result['body_urls'] }}</td>
        {# <td><a href="{{ result['url'] }}"></a></td> #}
    </tr>
    {% endfor %}

</table>

{% endblock %}
